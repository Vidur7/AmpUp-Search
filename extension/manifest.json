{
    "manifest_version": 3,
    "name": "AmpUp Search - LLM Content Optimizer",
    "version": "1.0.0",
    "description": "Analyze and optimize your website content for Large Language Models and AI search engines. Get detailed scores for crawlability, structured data, content structure, and E-E-A-T.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "https://api.ampupsearch.com/*",
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "AmpUp Search - Analyze this page",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["config.js", "content.js"],
            "run_at": "document_idle"
        }
    ],
    "homepage_url": "https://ampupsearch.com",
    "short_name": "AmpUp Search"
} 